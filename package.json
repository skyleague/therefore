{
  "name": "@skyleague/therefore",
  "version": "1.0.0-local",
  "description": "Therefore the JSON TypeScript toolkit.",
  "homepage": "https://skyleague.github.io/therefore/",
  "repository": {
    "type": "git",
    "url": "https://github.com/skyleague/therefore.git"
  },
  "license": "MIT",
  "author": "SkyLeague Technologies B.V. <technologies@skyleague.io> (https://skyleague.io)",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json",
    "./*.js": "./dist/*.js"
  },
  "types": "./dist/index.d.ts",
  "bin": {
    "therefore": "bin/run.js"
  },
  "files": [
    "bin",
    "dist",
    "package.json"
  ],
  "scripts": {
    "build": "npx ts-node --esm build.config.ts",
    "build:clean": "npx tsc --build --clean && rm -rf dist",
    "build:docs": "(cd docs; npm install; npm run build)",
    "check:cost": "npx cost-of-modules --no-install --include-dev",
    "check:coverage": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" npx jest --collectCoverage=true",
    "check:full": "npm run lint && npm run check:types && npm run check:coverage && npm run build && npm run check:project",
    "check:project": "npx node-standards lint",
    "check:types": "npx tsc -p tsconfig.json",
    "format": "npx prettier \"**/*.{ts,js,json,yml,yaml,md}\" --write",
    "lint": "npx eslint \"./{src,test,typings}/**/*.ts\" --cache --no-eslintrc --config .eslintrc.cjs",
    "lint:fix": "npm run lint -- --fix",
    "lint:full": "bash -c \"FULL_LINT=true npm run lint\"",
    "package": "rm -rf .dist && npm run build",
    "prepare": "npx husky install || true",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" npx jest"
  },
  "dependencies": {
    "@skyleague/axioms": "^1.15.0",
    "camelcase": "^7.0.1",
    "code-block-writer": "^12.0.0",
    "decamelize": "^6.0.0",
    "esbuild": "^0.17.14",
    "fast-glob": "^3.2.12",
    "inflection": "^2.0.1",
    "js-yaml": "^4.1.0",
    "jsonpointer": "^5.0.1",
    "make-synchronous": "^1.0.0",
    "source-map-support": "^0.5.21",
    "swagger2openapi": "^7.0.8",
    "tslib": "^2.5.0",
    "uuid": "^8.3.2",
    "yargs": "^17.7.1"
  },
  "devDependencies": {
    "@skyleague/node-standards": "1.22.0-beta-2172eaee.1",
    "@types/js-yaml": "^4.0.5",
    "@types/source-map-support": "^0.5.6",
    "@types/uuid": "^8.3.4",
    "@types/yargs": "^17.0.24",
    "ajv": "^8.12.0",
    "got": "^12.6.0",
    "nock": "^13.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "peerDependencies": {
    "ajv": "^8.12.0",
    "got": "^12.6.0",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "node-standards": {
    "extends": [
      "yargs-cli",
      "docusaurus"
    ],
    "ignorePatterns": [
      "bin/run.js"
    ]
  }
}
